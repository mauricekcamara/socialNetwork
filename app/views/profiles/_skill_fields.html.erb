  <div class='nested-fields'>
    <div class="form-group">
      <%= f.label 'Skill', :class => 'control-label col-lg-2' %>
      <div class="col-lg-10">
        <%= f.text_field :name, :class => 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :description, :class => 'control-label col-lg-2' %>
      <div class="col-lg-10">
        <%= f.text_area :description, :class => 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-lg-12">
        <%= f.check_box :done %>
        <%= f.label :done %>
      </div>
    </div>
    <div class="form-group">
      <button type="button" class="btn btn-danger"><%= link_to_remove_association "remove skill", f %></button>
    </div>

  </div>
  <br>