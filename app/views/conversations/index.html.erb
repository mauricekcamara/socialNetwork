<table class="table table-striped">
  <thead>
    <tr>
      <th colspan="3" class="page-header">
        <h2>My Messages</h2>
      </th>
    </tr>
    <tr>
      <th>Avatar</th>
      <th>Name</th>
      <th>Actions</th>
    </tr>

  </thead>
  <tbody>
    <% @conversations.each do |conversation| %>
      <% if conversation.sender_id == current_user.id || conversation.recipient_id == current_user.id %>
        <% if conversation.sender_id == current_user.id %>
          <% recipient = get_the_user(conversation.recipient_id) %>
        <% else %>
          <% recipient = get_the_user(conversation.sender_id) %>
        <% end %>
        <tr>
          <%= (recipient.class == User ? link_to(image_tag recipient.avatar.url, size:"50x50"): (user_path(recipient)) or ("no link available")) %>
          <td><%= recipient.full_name %></td>
          <td><%= link_to "View Message", conversation_messages_path(conversation) %></td>
        </tr>
      <% end %>
    <% end%>
  </tbody>
</table>