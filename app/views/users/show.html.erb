

<div class="row">
  <div class="col-md-4">
    <%= image_tag @user.avatar.url, size: "200x200", class: 'img-responsive' %>
    <h3>Contact: </h3>
    <p><span class="glyphicon glyphicon-envelope" aria-hidden="true"></span> <%= @user.email %></p>

    <% if @user.profile.present? %>
      <p><span class="glyphicon glyphicon-earphone" aria-hidden="true"></span> <%= @user.profile.phone %></p>
    <% end %>
  </div>
  <div class="col-md-8">
    <h2><%= @user.full_name %></h2>

    <% if @user.profile.present? %>

      <h4><%= @user.profile.title %></h4>
      <p><span class="glyphicon glyphicon-map-marker" aria-hidden="true"></span><%= @user.profile.location %></p>
        
      <h3>Education</h3>
      <% @user.schools.each do |school| %>
       <p><strong><%= school.name %></strong> <i><%= school.degree %></i><%= school.year %></p>

       <br> 
      <% end %>


    <% end %>


  </div>
</div>

  <div class="col-md-12">
    <br>
    <p><%= link_to 'Back', my_friends_path, class: "btn btn-primary" %></p>
  </div>




